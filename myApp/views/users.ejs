<!DOCTYPE html>
<html>
  <head>
    <script src="/bower/jquery/dist/jquery.js"></script>
    <script src="/bower/bootstrap/dist/js/bootstrap.js"></script>
    <script src="/javascripts/users.js"></script>
    <link rel='stylesheet' href='/bower/bootstrap/dist/css/bootstrap.css' />
    <link rel='stylesheet' href='/bower/bootstrap/dist/css/bootstrap-theme.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <header class="container">
      <h1>Add user section</h1>
    </header>
    <section id="user-add" class="container">
    	<form id="add-user-form" name="add-user-form" action="">
        <div class="form-group">
          <label>User name</label>
          <input type="text" class="form-control" name="user_name" palceholder="Name" required/>
        </div>

        <div class="form-group">
          <label>User e-mail</label>
          <input type="email" class="form-control" name="user_email" palceholder="e-mail" required/>
        </div>

        <div class="form-group">
          <label>User Picture</label>
          <input type="url" class="form-control" name="user_picture" palceholder="picture url"/>
        </div>

        <div class="form-group">
          <label>User story</label>
          <textarea class="form-control" name="user_story"></textarea>
        </div>
        <button type="submit" class="btn btn-default">Add user</button>
      </form>
    </section>
    <a class='back' href='/'><img class='image' src='/images/backbutton.png'><a>
  </body>
</html>
